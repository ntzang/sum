<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Tuan2_Kotlin.Kintent1">

    <EditText
        android:id="@+id/KItv1"
        android:layout_width="220dp"
        android:layout_height="68dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nhap so 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <EditText
        android:id="@+id/KItv2"
        android:layout_width="217dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nhap so 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KItv1"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/KIbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TINH TONG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KItv2"
        app:layout_constraintVertical_bias="0.178" />
</androidx.constraintlayout.widget.ConstraintLayout>